<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <!-- Form to enter original URL -->
   <form action="/url" method="POST">

      <input
        type="url"
        name="originalUrl"
        placeholder="Enter original URL"
        required
      />
      <button type="submit">Shorten</button>
    </form>

    <h2>All Shortened URLs:</h2>
    <ul>
      
        <% urls.forEach(u => { %>
          <li>
             <%= u.originalUrl %>  - 
             <a href="/url/<%= u.shortId %>"><%= u.shortId %></a>
          </li>
        <% }) %>
     
    </ul>
  </body>
</html>
